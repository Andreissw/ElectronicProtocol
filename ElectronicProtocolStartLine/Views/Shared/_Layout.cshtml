<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - приложение ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>   
   
    <div class="cont">
        @if (@Session["Service"] != null )
        {
            if (@Session["Service"].ToString() != "0")
            {            
                <div style="background-color: lightgray; border-bottom: 0.5px dotted gray">
                    <div style="margin-left: 5%;"><h2>Служба - @Session["Service"] </h2></div>
                    <div style="margin-left: 5%;"><h2>Пользователь - @Session["Name"]</h2></div>
                </div>
            }
        }

        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>


</html>

<style>
    .cont {
        padding: 3%;
    }
</style>